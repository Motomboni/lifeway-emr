# Production environment for Docker (docker-compose.prod.yml or docker-compose.standalone.yml)
# Copy to .env and set values: cp .env.prod.example .env
# See SECURITY_HARDENING.md for clinic-grade checklist.

# Required: MUST be a strong random value (min 32 chars). Generate: openssl rand -hex 32
SECRET_KEY=change-me-to-a-secure-random-string

# Django
DEBUG=false
ALLOWED_HOSTS=localhost,127.0.0.1,backend,yourdomain.com,www.yourdomain.com

# PostgreSQL (container name = db; set a strong password)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=emr_db
DB_USER=emr_user
DB_PASSWORD=your-secure-password-here
DB_HOST=db
DB_PORT=5432
# Optional: encrypt DB connection (require | verify-full for clinic-grade)
# DB_SSLMODE=require

# CORS: origins that will load the frontend (browser origin)
CORS_ALLOWED_ORIGINS=http://localhost,http://127.0.0.1,https://yourdomain.com,https://www.yourdomain.com

# Optional: Redis (add redis service to compose if you use it)
# REDIS_URL=redis://redis:6379/1

# Email, SMS, Twilio Video, Paystack, etc. (copy from .env.example and set for production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

SMS_ENABLED=True
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

TWILIO_API_KEY=
TWILIO_API_SECRET=
TWILIO_RECORDING_ENABLED=False

PAYSTACK_SECRET_KEY=
PAYSTACK_PUBLIC_KEY=
PAYSTACK_CALLBACK_URL=https://yourdomain.com/wallet/callback

CLINIC_NAME=Lifeway Medical Centre Ltd
CLINIC_ADDRESS=Plot 1593, ZONE E, APO RESETTLEMENT, ABUJA
CLINIC_PHONE=07058893439, 08033145080, 08033114417
CLINIC_EMAIL=info@clinic.com

BACKUP_RETENTION_DAYS=30

# Security (optional overrides; defaults are clinic-grade)
# Account lockout: 5 failed logins = 30 min lock (see apps.users.models.User)
# Auth rate limits: login 5/min 20/hr, refresh 30/min 200/hr, register 3/min 10/hr per IP
# AUDIT_LOG_RETENTION_DAYS=2555
